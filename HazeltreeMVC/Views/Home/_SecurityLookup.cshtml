@model IEnumerable<HazeltreeMVC.Models.Security>

@{
    if (Model.Count() == 0)
    { 
        <div>
            <h3>No record have been found</h3>
        </div>
    }        
    else
    {
        

<div class="form-group">
    <table class="table table-condensed" >
        <thead>
            <tr style="background:yellow">
                <th>SecurityId</th>
                <th>SecurityCode</th>
                <th>SecurityName</th>
                <th>Sedol</th>
                <th>Cusip</th>
                <th>Isin</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.SecurityId</td>
                    <td>@item.SecurityCode</td>
                    <td>@item.SecurityName</td>
                    <td>@item.Sedol</td>
                    <td>@item.Cusip</td>
                    <td>@item.Isin</td>
                </tr>
            }
        </tbody>
    </table>
</div>

    }
}


